public static void main(String[] args){
        Scanner scan=new Scanner(System.in);

        double x1;
        System.out.print("Введите координату х первой вершины: ");
        x1=scan.nextDouble();

        double y1;
        System.out.print("Введите координату у первой вершины: ");
        y1=scan.nextDouble();

        double x2;
        System.out.print("Введите координату х второй вершины: ");
        x2=scan.nextDouble();

        double y2;
        System.out.print("Введите координату у второй вершины: ");
        y2=scan.nextDouble();

        double x3;
        System.out.print("Введите координату х третьей вершины: ");
        x3=scan.nextDouble();

        double y3;
        System.out.print("Введите координату у третьей вершины: ");
        y3=scan.nextDouble();

        double Striangle =  0.5 * ((x1-x3)*(y2- y3) - (x2-x3)*(y1-y3));


        System.out.print("Площадь треугольника " +Math.abs(Striangle));
    }
}
